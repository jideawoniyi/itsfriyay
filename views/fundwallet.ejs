  <div class="container" style="margin-top: 100px;">
 
        <div id="alert-fund-wallet" class="alert alert-success popover-dismiss" style="display:none"></div>
        <%= console.log(message) %>
       
    <form id="formFundWallet" action="/fundwallet" method="post" onclick="showFundWalletAlert('<%= message %>')" style="display:block">
      <div class="form-group">
        <label for="walletId">Wallet ID</label>
        <input type="text" class="form-control" id="walletId" name="walletId" value="<%=user.wallet.id%>" readonly style="font-size: 10px;">
      </div>
      <div class="form-group">
        <label for="amount">Amount</label>
        <input type="number" class="form-control" id="amount" name="amount" placeholder="Enter amount">
      </div>
      <button type="submit" class="btn btn-primary">Fund</button>
    </form>
  </div>


    
    <script>
      function showFundWalletAlert(message) {
              const alertFundWallet = document.getElementById('alert-fund-wallet');
              const formFundWallet = document.getElementById('formFundWallet');
              console.log(`the initial message in the box is ${message}`);
              if(message !== ''){
                alertFundWallet.innerHTML = message;
                alertFundWallet.style.display = "block";
                formFundWallet.style.display="none";
      
            setTimeout(() => {
            alertFundWallet.style.display = "none";
          }, 5000);
      
          alertFundWallet.addEventListener('click', (event) => {
            if (event.target.matches('.close')) {
              alertFundWallet.style.display = "none";
              formFundWallet.style.display="none";
            }
          });
        
          }
        }
        formFundWallet.addEventListener('submit', (event) => {
        event.preventDefault();
        console.log(`the message in the box is ${message}`);
        showFundWalletAlert('Wallet funded successfully');
      });
        </script> 
      
